<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div class="nav_bar_container">
      <div class="nav_bar">
	
	<%= link_to "Home", root_path %>
	<%= link_to "Blog", posts_path %>
      </div>
    </div>
    <br/>

    <% if notice || alert %>
      <div class="messages">
	<p id="notice"><%= notice %></p>
	<p id="alert"><%= alert %></p>
      </div>
      <br />
    <% end %>
    
    <div class="content_container">
      <div class="content">
	<%= yield %>
      </div>
    </div>

  </body>
</html>
