<%= div_for post do %>
  <h2><%= post.title %></h2>
  <p><%= post.content %></p>
  <div class="num_comments">
    <b><%= "Comments (#{ post.comments.count})"%></b>
  </div>
  <div class="index_actions">
    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, remote: true, 
	data: { confirm: 'Are you sure?' } %>
  </div>
  <hr />
<% end %>
